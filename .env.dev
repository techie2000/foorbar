# Development Environment Configuration
COMPOSE_PROJECT_NAME=axiom-dev
ENVIRONMENT=dev

# Port Configuration (Prefix: 1)
POSTGRES_PORT=15432
RABBITMQ_PORT=15672
RABBITMQ_MGMT_PORT=15673
BACKEND_PORT=18080
FRONTEND_PORT=13000

# Database Configuration
POSTGRES_USER=axiom
POSTGRES_PASSWORD=axiom_dev_pass
POSTGRES_DB=axiom_dev

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# Backend Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=axiom
DATABASE_PASSWORD=axiom_dev_pass
DATABASE_LOGLEVEL=warn  # Options: silent, error, warn, info (warn suppresses 'record not found' logs)
DATABASE_NAME=axiom_dev
LEI_DATA_DIR=/root/data/lei  # Inside container, mapped to ./data/lei on host

# LEI Sync Schedules (all optional - defaults shown)
# LEI_DELTA_SYNC_INTERVAL=1h          # Delta sync frequency: 1h, 30m, 2h, etc. (default: 1h)
# LEI_FULL_SYNC_DAY=Sunday            # Full sync day: Sunday, Monday, etc. (default: Sunday)
# LEI_FULL_SYNC_TIME=02:00            # Full sync time: HH:MM format (default: 02:00)
# LEI_CLEANUP_TIME=03:00              # Cleanup time: HH:MM format (default: 03:00)

# LEI File Cleanup (runs daily at configured time)
# LEI_KEEP_FULL_FILES=2               # Keep last N full files (default: 2, ~1.8GB)
# LEI_KEEP_DELTA_FILES=5              # Keep last N delta files (default: 5, ~65MB)

RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
JWT_SECRET=development-secret-change-in-production
SERVER_PORT=8080
SERVER_MODE=debug

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:18080
